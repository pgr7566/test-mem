/* product page */
.product-section--title{
  font-weight: bold;
}
.product-recently-viewed-card{
  padding: 10px 20px 10px;
  border: 1px solid rgba(127,127,127,0.16);
  box-shadow: 0 1px 4px rgba(127,127,127,0.11);
  -webkit-box-shadow: 0 1px 4px rgba(127,127,127,0.11); /* Safari 3-4, iOS 4.0.2 - 4.2, Android 2.3+ */
  -moz-box-shadow:   0 1px 4px rgba(127,127,127,0.11); /* Firefox 3.5 - 3.6 */
  .productitem{
    border: none;
    padding: 10px 0;
    box-shadow: none;
  }
  .productitem--actions, .productitem--ratings{display: none;}
}
.product-title, .product--price{
  font-weight: bold;
}

.product-metadata {
  margin: 1.3rem 0;
  div {
      margin: 0;
      padding: 6px 0;
      border-bottom: 1px solid #eee;
  }
  div .meta-field {
      display: inline-block;
      width: 30%;
      color: #7a7a7a;
      border: 0;
      vertical-align: top;
      margin: 0;
      padding: 6px 0;
  }
  div .meta-field-value {
      font-weight: 500;
      color: #333;
      width: 67%;
      display: inline-block;
      border: 0;
  }
}
.product-form--atc {
  .product-form--atc-qty{
    display: inline-block;
  }
  .product-form--atc-button {
    display: inline-block;
    width: calc(100% - 7.9375rem);
    margin-left: 0.75rem;
    margin-top: 0;
  }
}

ul.pdptabs {
  display: block;
  margin: 0 0 20px;
  padding: 0;
  li:first-child a.active {
      margin-left: 0;
  }
  li:first-child a {
      border-top-left-radius: 2px;
      border-width: 1px 1px 0;
  }
  li a.active {
      background: none;
      color: #da1b2c;
      border: 1px solid #a2bfd5;
      border-bottom: 1px solid #ffffff !important;
  }
  li a {
      background-color: #f8f8f8;
      float: left;
      outline: none;
      cursor: pointer;
      padding: 6px 16px;
      transition: 0.3s;
      font-size: 15px;
      width: auto;
      color: #000;
      border: 1px solid #d8d8d8;
      border-bottom: 1px solid #d8d8d8;
      text-decoration: none;
  }
  li {
      list-style: none;
      display: inline-flex;
  }
}

.contenttabs .accordianTitleDiv, .desctabstext {
    display: none;
}

.desctabstext.open {
    display: block;
}

.prod-desc {
    padding: 0px 9%;
    margin: 0;
    white-space: normal;
}

.accordianTitleDiv a.accordiontitle {
    display: block;
    color: #333;
    padding: 10px 6px;
    margin: 0 10px;
    background-size: 20px;
    font-weight: normal;
    cursor: pointer;
    font-size: 16px;
    border: 1px solid #d3d3d3;
    background: url(https://cdn.shopify.com/s/files/1/0025/2608/5179/files/down-chevron.png) no-repeat;
    background-position: 97%;
    text-decoration: none;
}
.accordianTitleDiv a.accordiontitle.active {
    background-size: 20px;
    font-weight: 700;
    background: url(https://cdn.shopify.com/s/files/1/0025/2608/5179/files/up-chevron.png?4650059093252397556) no-repeat;
    background-position: 97%;
}
